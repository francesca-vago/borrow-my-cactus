<h3>Search here</h3>

<%= form_tag movies_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a cactus"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="search-container d-flex">
  <div class="cards-container">
    <ol>
      <% @plants.each do |plant| %>
      <li> <%= link_to plant.name, plant_path(plant) %>
        <%= plant.address %>
        <%=plant.daily_price%>
        <p>by: <%= plant.user.first_name %></p>
        <%= link_to "add to wishlist", plant_wishes_path(plant), method: :post  %>
        </li>
      <% end %>
    </ol>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

